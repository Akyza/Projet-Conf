{% extends "base.html.twig" %}

{% block body %}
    <div class="jumbotron">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>firstname</th>
                <th>email</th>
            </tr>
            </thead>
        <tbody>
            <tr>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if "ROLE_USER" in user.roles %}
                    <label for="user">Utilisateur: </label>
                    <input type="checkbox" value="user" name="user" checked disabled>
                    {% endif %}
                    {% if "ROLE_ADMIN" in user.roles %}
                        <label for="admin">Admin: </label>
                        <input type="checkbox" value="admin" name="admin" checked disabled>

                    {% endif %}
                </td>
            </tr>
        </tbody>
        </table>
        <button type="button" class="btn btn-primary"><a style="color: white; text-decoration: none" href="{{ path('user_list')}}">Retourn</a></button>
        {% if "ROLE_ADMIN" in user.roles %}
            <button type="button" class="btn btn-primary"><a style="color: white; text-decoration: none" href="{{ path('user_edit',{id: user.id})}}">Edit</a></button>
        {% endif %}
    </div>
{% endblock %}